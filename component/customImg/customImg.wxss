/* component/img/img.wxss */

.img_container {
  position: relative;
}

.img_img {
  width: 750rpx;
  height: 750rpx;
}

.img_title {
  position: absolute;
  bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background: rgba(0, 0, 0, 0.5);
  line-height: 3;
  display: flex;
  align-items: center;
  font-size: 16px;
  width: 750rpx;
  justify-content: flex-end;
  color: white;
  font-weight: 800;
  padding-right: 20px;
}
