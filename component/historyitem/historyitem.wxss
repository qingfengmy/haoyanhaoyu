

.randomItem {
  padding: 8px 15px;
  display: flex;
  border-bottom: 1px solid #f8f8f8;
}
.randomImg {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.random_right {
  display: flex;
  flex-direction: column;
  margin-left: 8px;
  flex-grow: 1;
}

.itemTitle {
  font-size: 14px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 42px;
  margin-bottom: 10px;
}

.itemType {
  font-size: 12px;
  display: flex;
}

.itemAuthor {
  margin-right: 15px;
}

.itemDate {
  display: flex;
  justify-content: flex-end;
  font-size: 10px;
  color: #ccc;
}
